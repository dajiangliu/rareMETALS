x.var <- read.table('/net/hunt/home/hezhang/project/glgc/analysis/burden/tmp.var', head=F)
x.knw <- read.table('/net/hunt/home/hezhang/project/glgc/analysis/burden/tmp.known', head=F)
x.score <- as.vector(read.table('/net/hunt/home/hezhang/project/glgc/analysis/burden/tmp.score.list', head=F)[,1])
x.cov <- as.vector(read.table('/net/hunt/home/hezhang/project/glgc/analysis/burden/tmp.cov.list', head=F)[,1])
x.site <- read.table('/net/fantasia/home/dajiang/RARE-LIPIDS/datasets/GLGC.sites.withAF.txt', head=T)
knw <- as.character(x.knw[1,1])
var <- as.character(x.var[ x.var[,2] == as.character(x.knw[1, 2]), 1 ])
x.refaltlist <- list( pos=as.vector(x.site[,1]), ref=as.vector(x.site[,3]), alt=as.vector(x.site[,4]), af=as.vector(x.site[,6]), af.diff.max=1)
conditional.rareMETALS.single.group(knw, x.score, x.cov, known.variant.vec=var, refaltList=x.refaltlist, 1, 'two.sided', out.digits=4, callrate.cutoff=0.9, hwe.cutoff=1e-7, approxCov=TRUE, TRUE, 'burden')
